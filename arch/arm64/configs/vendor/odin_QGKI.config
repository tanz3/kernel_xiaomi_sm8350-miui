# Camera
CONFIG_USE_COMMON_CAMERA=y

# Firmware
# CONFIG_FW_LOADER_USER_HELPER_FALLBACK is not set

# Fingerprint
CONFIG_FINGERPRINT_GOODIX_FOD=y

# Haptics
# CONFIG_INPUT_QCOM_HV_HAPTICS is not set
CONFIG_INPUT_AW8697_HAPTIC=y

# Power Supply
# CONFIG_QTI_BATTERY_CHARGER is not set
CONFIG_QTI_BATTERY_CHARGER_ODIN=y
CONFIG_BQ2597X=y
CONFIG_BQ_FUEL_GAUGE=y

# Platform
CONFIG_MACH_XIAOMI=y
CONFIG_MACH_XIAOMI_ODIN=y

# Proximity
CONFIG_MIUS_PROXIMITY=y

# Time of flight
CONFIG_STMVL53L5=y

# Touchscreen
CONFIG_TOUCHSCREEN_CYPRESS_CYTTSP5=y
CONFIG_TOUCHSCREEN_CYPRESS_CYTTSP5_DEVICE_ACCESS=y
CONFIG_TOUCHSCREEN_CYPRESS_CYTTSP5_I2C=y
CONFIG_TOUCHSCREEN_CYPRESS_CYTTSP5_LOADER=y
CONFIG_TOUCHSCREEN_ST_FTS_V521_SPI=y
CONFIG_TOUCHSCREEN_XIAOMI_TOUCHFEATURE=y

# Ultra wideband
CONFIG_NXP_SR100=y

# WiFi
CONFIG_CNSS_QCA6490=y

# Wireless charging
CONFIG_MI_WIRELESS=y
